<div class='container'>
  <h2>Add a new comic</h2>
</div>

<div class='row'>
  <!-- RENDER THE FORM PARTIAL HERE. -->

 <div class="col-md-6">

   <form action="/comicbin/create">

      <div class="form-group">
        <label for="title">Title</label>
        <input type="string" name="title" class="form-control" id="title" placeholder="Enter Comic Title Here">
      </div>

      <div class="form-group">
        <label for="description">Description</label>
        <input type="text" name="description" class="form-control" id="description" placeholder="Enter Comic Description Here">
      </div>

      <div class="form-group">
        <label for="image">Image</label>
        <input type="string" name="image" class="form-control" id="image" placeholder="Enter Image URL here">
      </div>

      <button type="submit" class="btn btn-default">Create Comic</button>
   </form>

 </div>


</div>

<div class='container'>
  <%= link_to 'Back to all comics', "/comicbin" %>
</div>
